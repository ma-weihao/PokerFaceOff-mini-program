.container {
  padding: 32rpx;
}

.room-info {
  text-align: center;
  margin-bottom: 48rpx;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.round-name {
  font-size: 28rpx;
  color: #666;
}

.share-button {
  margin-top: 16rpx;
  font-size: 28rpx;
  background-color: #07c160;
  color: #fff;
}

.users-list {
  margin-bottom: 48rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.user-role {
  font-size: 24rpx;
  color: #666;
}

.user-vote {
  font-size: 32rpx;
  font-weight: bold;
}

.poker-cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.card {
  width: 120rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ddd;
  border-radius: 16rpx;
  font-size: 36rpx;
  background-color: #fff;
}

.card.selected {
  border-color: #07c160;
  background-color: #e8f8f1;
}

.host-controls {
  text-align: center;
}

.primary-button {
  background-color: #07c160;
  color: #fff;
} 